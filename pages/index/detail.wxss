/* pages/index/detail.wxss */
.container {
  padding: 0;
}
.headBox {
  margin: 0;
  padding: 0 40rpx;
  background-color: #66CCFF;
  color:#ffffff
}
.name {
  font-size: 70rpx;
  padding: 10rpx 0;
}
.type {
  font-size: 30rpx;
  padding: 10rpx 0;
}
.point {
  padding: 10rpx 0;
}
.rest {
  text-align: center;
  padding: 20rpx;
}
.group {
  display: flex;
  background-color: #66CCFF;
}
.gp {
  padding:15rpx 0;
  text-align: center;
  flex-grow:1;
  color: #ffffff;
  border: 1rpx solid #ffffff;
}
.gp-hover {
  background-color: #3399FF;
}
.introduction {
  margin: 10rpx 0;
  padding: 10rpx 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  background-color: #eeeeee;
}
.bottomBox {
  margin: 10rpx 0 0 0; 
  background-color: #eeeeee;
}
.commentBar {
  padding: 10rpx 40rpx;
  border-bottom: 5rpx solid #66CCFF;
  background-color: #ffffff;
}
.commentCard {
  background-color: #ffffff;
  padding: 5rpx 40rpx;
  margin-bottom: 20rpx;
}
.cardHead {
  padding: 10rpx 10rpx;
  display: flex;
  border-bottom: 2rpx solid #eeeeee;
}
.photo {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
}
.name {
  font-size: 45rpx;
  padding: 5rpx 10rpx;
}
.score {
  font-size: 30rpx;
  color: #666666;
  padding: 5rpx 10rpx;
}
.content {
  padding: 10rpx 20rpx;
  font-size: 35rpx;
  line-height: 45rpx;
}
.screen {
  z-index:100;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;bottom: 0;left: 0;right: 0;
}
.commentBox {
  width: 100%;
  z-index: 200;
  position: fixed;
  top: 0;
  background-color: #ffffff;
}
.textArea {
  width: 100%;
  padding: 10rpx 40rpx;
}
.s-btn {
  background-color: #66ccff;
  color: #ffffff;
}
.s-btn-hover{
  background-color:#3399ff;
}